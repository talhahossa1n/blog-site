<%- include('partials/header'); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post) { %>
  <h2><%= post.title %></h2>
  <p>
    <%= post.content.length > 100 ? post.content.substring(0,100) + ' ... ' : post.content %>
    <a href="/posts/<%= post._id %>">
      <%= post.content.length > 100 ? "Read More" : "Open" %>
    </a>
  </p>
<% }); %>

<%- include('partials/footer'); -%>